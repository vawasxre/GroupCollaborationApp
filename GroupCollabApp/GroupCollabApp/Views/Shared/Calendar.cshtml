@{
    ViewData["Title"] = "Calendar";
}

<head>
    <style>
        #eventForm {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        #add-event {
            background-color: #4CAF50;
            border: none;
            color: white;
            padding: 12px 24px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 10px;
        }
    </style>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.6/index.global.min.js'></script>
</head>

<body>
   
    <form id="eventForm">
        <button id="add-event">Add Event</button>
    </form>
    <div id='calendar'></div>
</body>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            events: JSON.parse(localStorage.getItem('events')) || [],
            eventClick: function (info) {
                var eventObj = info.event;
                var description = eventObj.extendedProps.description;
                if (description) {
                    alert('Description: ' + description);
                    var deleteConfirmed = confirm('Do you want to delete this event?');
                    if (deleteConfirmed) {
                        eventObj.remove();
                        var events = calendar.getEvents().map(function (event) {
                            return {
                                title: event.title,
                                start: event.start,
                                end: event.end,
                                description: event.extendedProps.description
                            };
                        });
                        localStorage.setItem('events', JSON.stringify(events));
                    }
                } else {
                    alert('No description available for this event');
                }
            }
        });

        calendar.render();

        document.getElementById('add-event').addEventListener('click', function () {
            var title = prompt("Enter event title:");
            if (title) {
                var start = prompt("Enter event start date (YYYY-MM-DD):");
                var end = prompt("Enter event end date (YYYY-MM-DD):");
                var description = prompt("Enter event description:");
                var event = {
                    title: title,
                    start: start,
                    end: end,
                    description: description
                };
                calendar.addEvent(event);
                var events = calendar.getEvents().map(function (event) {
                    return {
                        title: event.title,
                        start: event.start,
                        end: event.end,
                        description: event.extendedProps.description
                    };
                });
                localStorage.setItem('events', JSON.stringify(events));
            }
        });
    });
</script>





        
            
     
    